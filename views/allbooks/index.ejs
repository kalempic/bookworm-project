
<% layout('layouts/boilerplate')%>
<h1>All book</h1>
<div>
    <a href="/allbooks/new">Add book</a>
</div>
<% for (let book of books){%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-2">  <img class="img-fluid" alt="" src="<%=book.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= book.title %> </h5>
                    <p class="card-text"><%= book.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= book.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/allbooks/<%=book._id%>">View <%=book.title%></a>
                </div>
            </div>
        </div>
    </div>
<% }%>


