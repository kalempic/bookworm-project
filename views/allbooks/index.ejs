
<% layout('layouts/boilerplate')%>
<h1>All books</h1>
<div>
    <a href="/allbooks/new">Add book</a>
</div>
<% for (let books of allbooks){%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-2">  <img class="img-fluid" alt="" src="<%=books.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= books.title %> </h5>
                    <p class="card-text"><%= books.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= books.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/allbooks/<%=books._id%>">View <%=books.title%></a>
                </div>
            </div>
        </div>
    </div>
<% }%>


