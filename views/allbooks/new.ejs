<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">New book</h1>
    <div class="col-md-6 offset-md-3">

        <form action="/allbooks" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="books[title]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="genre">Genre</label>
                <input class="form-control" type="text" id="genre" name="books[genre]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
<div>
            <label class="form-label" for="image">Add image</label>
</div>
       <input type="file" name="image" id="" multiple>
            </div>


<!--            <div class="mb-3">-->
<!--                <label class="form-label" for="image">Image Url</label>-->
<!--                <input class="form-control" type="text" id="image" name="books[image]" required>-->
<!--                <div class="valid-feedback">Looks good!</div>-->
<!--            </div>-->
            <div class="mb-3">
                <label class="form-label" for="price">Book price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">RSD</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                           aria-describedby="price-label" name="books[price]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="books[description]" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Add book</button>
            </div>
        </form>
        <a href="/allbooks">All books</a>
    </div>

</div>

